# Environment Configuration for Raspberry Pi 3/3+ Deployment
# Copy this file to .env and fill in your values

# ========================================
# Database Configuration
# ========================================
DB_PASSWORD=changeme_secure_password

# ========================================
# Home Assistant Configuration
# ========================================
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your_long_lived_access_token_here

# ========================================
# Worker Configuration (Optional - defaults shown)
# ========================================
# Data collection interval in milliseconds (default: 60 seconds)
COLLECTION_INTERVAL_MS=60000

# Sensor re-discovery interval in milliseconds (default: 5 minutes)
REDISCOVERY_INTERVAL_MS=300000

# Old data cleanup interval in milliseconds (default: 1 hour)
CLEANUP_INTERVAL_MS=3600000

# Data retention period in days (default: 30 days)
RETENTION_DAYS=30

# ========================================
# Web Server Configuration (Optional)
# ========================================
# Port for web server (default: 3000)
PORT=3000
