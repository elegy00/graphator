{
  "name": "graphator",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "worker": "tsx app/worker/index.ts",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "docker:build": "docker build -t graphator:latest .",
    "docker:build:amd64": "docker build --platform linux/amd64 -t graphator:amd64 .",
    "docker:build:arm64": "docker build --platform linux/arm64 -t graphator:arm64 .",
    "docker:build:armv7": "docker build --platform linux/arm/v7 -t graphator:armv7 .",
    "docker:build:multi": "docker buildx build --platform linux/amd64,linux/arm64,linux/arm/v7 -t graphator:latest --load .",
    "docker:build:multi:push": "docker buildx build --platform linux/amd64,linux/arm64,linux/arm/v7 -t graphator:latest --push ."
  },
  "dependencies": {
    "@react-router/node": "^7.9.2",
    "@react-router/serve": "^7.9.2",
    "@tanstack/react-query": "^5.90.2",
    "dotenv": "^17.2.3",
    "isbot": "^5.1.31",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.2"
  },
  "devDependencies": {
    "@react-router/dev": "^7.9.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.21",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
  }
}
